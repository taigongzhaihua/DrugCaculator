<Application x:Class="DrugCalculator.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="/View/Windows/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Styles.xaml" />
                <ResourceDictionary Source="/Resources/ComboBoxes.xaml" />
                <ResourceDictionary Source="/Resources/Buttons.xaml" />
                <ResourceDictionary Source="/Resources/TextBoxes.xaml" />
                <ResourceDictionary Source="/Resources/ToggleButtons.xaml" />
                <ResourceDictionary Source="/Resources/ListBoxes.xaml" />
                <ResourceDictionary Source="/Resources/Sliders.xaml"/>
                <ResourceDictionary Source="/Resources/Menus.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>